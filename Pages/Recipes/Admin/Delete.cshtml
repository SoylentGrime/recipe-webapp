@page "{id:int}"
@model Recipe_Webpage.Pages.Recipes.Admin.DeleteModel
@inject Recipe_Webpage.Services.ILocalizationService L
@{
    ViewData["Title"] = L["DeleteRecipe"];
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="../Index">@L["Recipes"]</a></li>
            <li class="breadcrumb-item"><a asp-page="../Details" asp-route-id="@Model.Recipe?.Id">@Model.Recipe?.Title</a></li>
            <li class="breadcrumb-item active" aria-current="page">@L["Delete"]</li>
        </ol>
    </nav>

    @if (Model.Recipe == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @L["RecipeNotFound"]
        </div>
        <a asp-page="../Index" class="btn btn-primary">@L["BackToRecipes"]</a>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> @L["ConfirmDelete"]</h3>
                    </div>
                    <div class="card-body">
                        <p class="lead">@L["ConfirmDelete"]</p>
                        
                        <div class="card mb-4">
                            <div class="card-body">
                                <h4>@Model.Recipe.Title</h4>
                                @if (!string.IsNullOrEmpty(Model.Recipe.Category))
                                {
                                    <span class="badge bg-info">@Model.Recipe.Category</span>
                                }
                                <p class="text-muted mt-2">@Model.Recipe.Description</p>
                                <div class="small text-muted">
                                    <span><i class="bi bi-clock"></i> @(Model.Recipe.PrepTimeMinutes + Model.Recipe.CookTimeMinutes) @L["min"]</span>
                                    <span class="ms-3"><i class="bi bi-people"></i> @Model.Recipe.Servings @L["servings"]</span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle"></i> @L["ThisActionCannotBeUndone"]
                        </div>

                        <form method="post">
                            <input type="hidden" asp-for="Recipe.Id" />
                            <div class="d-flex justify-content-between">
                                <a asp-page="../Details" asp-route-id="@Model.Recipe.Id" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> @L["Cancel"]
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> @L["Delete"]
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
